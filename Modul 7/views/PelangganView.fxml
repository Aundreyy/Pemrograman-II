<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PelangganController">
   <children>
      <TextField fx:id="txtNama" layoutX="20.0" layoutY="20.0" promptText="Nama" />
      <TextField fx:id="txtEmail" layoutX="180.0" layoutY="20.0" promptText="Email" />
      <TextField fx:id="txtTelepon" layoutX="20.0" layoutY="60.0" promptText="Telepon" />
      
      <Button layoutX="180.0" layoutY="60.0" onAction="#add" text="Add" />
      <Button layoutX="230.0" layoutY="60.0" onAction="#update" text="Edit" />
      <Button layoutX="280.0" layoutY="60.0" onAction="#delete" text="Del" />

      <TableView fx:id="table" layoutX="20.0" layoutY="100.0" prefHeight="280.0" prefWidth="460.0">
        <columns>
          <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
          <TableColumn fx:id="colNama" text="Nama" prefWidth="120"/>
          <TableColumn fx:id="colEmail" text="Email" prefWidth="120"/>
          <TableColumn fx:id="colTelepon" text="Telepon" prefWidth="100"/>
        </columns>
      </TableView>
   </children>
</AnchorPane>